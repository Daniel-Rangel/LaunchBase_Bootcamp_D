{% extends "layout.njk"%}

{% block head %}
  <title>Sobre - Rocketseat </title>
{% endblock %}

{% block content %}
  
  <div class="card card-table">
    <a href="http:/teachers/create" class="btnCriar">Novo</a>
    <table>
      <thead>
        <tr>
          <th>Nome completo</th>
          <th>Acompanhamento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for teacher in teachers %}
        <tr>
          <td>
            <span style="background-image: url({{teacher.avatar_url}})"></span>
            {{teacher.name}}
          </td>
          <td>
            {% for subjects in teacher.school_subjects.split(',') %}
              <span>{{subjects}}</span>
            {% endfor %}
          </td>
          <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
        </tr>
        {% endfor %}

      </tbody>
    </table>
  </div>

{% endblock %}
