{% extends "layout.njk"%}

{% block head %}
  <title>Sobre - Rocketseat </title>
{% endblock %}

{% block content %}
    {% include "header.njk"%}
    <div class="card">
      <section class="imagem" style="background: url({{teacher.avatar_url}}) no-repeat  center center /cover"></section>
      <section class="detalhes">
        <form action="/teachers?_method=PUT" method="POST">
          <h3>Edit Registration</h3>
          {% include 'teacher/fields.njk' %}
          <input type="hidden" name="id" value="{{teacher.id}}">
        </form>
        <form class="form_dele" action="/teachers?_method=DELETE" method="POST">
          <button id="btn_delete" type="submit">Deletar</button>
        </form>
      </section>
    </div>

{% endblock %}

