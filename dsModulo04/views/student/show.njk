{% extends "layout.njk"%}

{% block head %}
  <title>Sobre - Rocketseat </title>
{% endblock %}

{% block content %}
  
  <div class="card">
    <section 
      class="imagem" 
      style="background: url({{student.avatar_url}}) no-repeat center center / cover " 
    ></section>
    <section class="detalhes">
      <h3>Detalhes</h3>
      <div class="pessoal">

        <div class="item">
          <div>Professor</div>
          <div>{{student.name}}</div>
        </div>
        
        <div class="item">
          <div>Idade</div>
          <div>{{student.birth}}</div>
        </div>

      </div>

      <div class="item">
        <div>Email</div>
        <div>
          {{student.email}}
        </div>
      </div>

      <div class="item">
        <div>Escolaridade</div>
        <div>
          {{student.schooling}}
        </div>
      </div>

      <div class="item">
        <div>Horas semanais</div>
        <div>
          {{student.hours}}H 
        </div>
      </div>
      
      
      <div class="item">
        <a href="{{student.id}}/edit" id="btnEdit">Editar</a>
      </div>
    </section>
  </div>

{% endblock %}
