{% extends "layout.njk"%}

{% block head %}
  <title>Sobre - Rocketseat </title>
{% endblock %}

{% block content %}
    <div class="card">
      <section class="imagem" style="background: url({{student.avatar_url}}) no-repeat  center center /cover"></section>
      <section class="detalhes">
        <form action="/students?_method=PUT" method="POST">
          <h3>Edit Registration</h3>
          {% include 'student/fields.njk' %}
          <input type="hidden" name="id" value="{{student.id}}">
        </form>
        <form class="form_dele" action="/students?_method=DELETE" method="POST">
          <button id="btn_delete" type="submit">Deletar</button>
          <input type="hidden" name="id" value="{{student.id}}">
        </form>
      </section>
    </div>

{% include "confirm.njk" %}
{% endblock %}

